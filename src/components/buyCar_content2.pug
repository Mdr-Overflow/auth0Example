              .year
                p.text Select Year
                select.style-box#YEAR
                  option(value='1990') 1990
                  option(value='2000') 2000
                  option(value='2010') 2010
              .price
                p.text Select Price
                select.style-box#PRICE
                  option(value='0') 0
                  option(value='10000') 10000
                  option(value='15000') 15000
              .body-style
                p.text Select Style
                select.style-box#STYLE
                  option(value='cabrio') Cabrio
                  option(value='combi') Combi
                  option(value='compact') Compact
                  option(value='coupe') Coupe
                  option(value='suv') Suv
              .power-style
                p.text Select Power
                select.style-box#POWER
                  option(value='0') 0
                  option(value='100') 100
                  option(value='200') 200
              .transmission-style
                p.text Select Gear-Box
                select.style-box#GEARBOX
                  option(value='automatic') automatic
                  option(value='manual') manual
              .fuel-style
                p.text Select fuel
                select.style-box#FUEL
                  option(value='petrol') petrol
                  option(value='electric') electric
                  option(value='lpg') lpg
                  option(value='hybrid') hybrid
                  option(value='diesel') diesel
              .submit
                a.submit-btn#SUBMIT(type="Submit") Submit
        section.section-car 
            .container
                h1.car-heading Autoturisme gasite - #{cars.length}
                .car-cont.grid.grid--7-cols.margin-top
                            each car in cars
                             +car-card(car)
